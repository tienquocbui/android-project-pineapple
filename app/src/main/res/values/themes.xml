<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Capture" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:fontFamily">@font/geist</item>
        <item name="fontFamily">@font/geist</item>
    </style>

    <style name="Theme.Capture.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:fontFamily">@font/geist</item>
        <item name="fontFamily">@font/geist</item>
    </style>

    <!-- Custom button styles -->
    <style name="Widget.App.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">14dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary_blue</item>
        <item name="android:padding">14dp</item>
        <item name="android:fontFamily">@font/geist</item>
        <item name="fontFamily">@font/geist</item>
    </style>

    <style name="Widget.App.Button.Secondary" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">14dp</item>
        <item name="android:textColor">@color/secondary_blue</item>
        <item name="backgroundTint">@color/primary_blue_transparent</item>
        <item name="android:padding">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="rippleColor">@color/primary_blue</item>
        <item name="android:fontFamily">@font/geist</item>
        <item name="fontFamily">@font/geist</item>
    </style>

    <!-- Custom input field style -->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">14dp</item>
        <item name="boxCornerRadiusTopEnd">14dp</item>
        <item name="boxCornerRadiusBottomStart">14dp</item>
        <item name="boxCornerRadiusBottomEnd">14dp</item>
        <item name="boxBackgroundColor">@color/black</item>
        <item name="boxStrokeColor">@color/primary_blue</item>
        <item name="hintTextColor">@color/primary_blue</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:fontFamily">@font/geist</item>
        <item name="fontFamily">@font/geist</item>
    </style>

    <!-- Bottom Navigation style -->
    <style name="Widget.App.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/black</item>
        <item name="itemIconTint">@color/nav_item_color</item>
        <item name="itemTextColor">@color/nav_item_color</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.App.BottomNavigation.ActiveIndicator</item>
        <item name="android:fontFamily">@font/geist</item>
        <item name="fontFamily">@font/geist</item>
        <item name="shapeAppearanceOverlay">@style/RoundedBottomNav</item>
    </style>

    <style name="RoundedBottomNav" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">14dp</item>
    </style>

    <style name="Widget.App.BottomNavigation.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/primary_blue</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.CircleIndicator</item>
    </style>

    <style name="ShapeAppearance.App.CircleIndicator" parent="">
        <item name="cornerSize">40dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <!-- AlertDialog Style for Comments -->
    <style name="AppTheme.AlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="android:background">@color/card_background</item>
        <item name="android:windowBackground">@color/card_background</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/geist</item>
        <item name="fontFamily">@font/geist</item>
    </style>
    
    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/system_gray</item>
    </style>
</resources>
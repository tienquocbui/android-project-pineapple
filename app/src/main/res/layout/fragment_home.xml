<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:fitsSystemWindows="true">

    <!-- Safe Area Top Space (for camera notch) -->
    <View
        android:id="@+id/safe_area_top"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="#00000000"/>

    <!-- Feed layout -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        tools:visibility="visible"
        android:layout_marginTop="78dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/feed_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingHorizontal="8dp"
            android:paddingTop="8dp"
            android:backgroundTint="@color/accent"
            android:paddingBottom="90dp"
            android:visibility="visible" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Empty state layout -->
    <LinearLayout
        android:id="@+id/empty_state_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        app:layout_anchor="@id/toolbar"
        app:layout_anchorGravity="bottom"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:alpha="0.8"
            android:contentDescription="Empty feed icon"
            android:src="@drawable/ic_empty_feed" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif-medium"
            android:text="No posts yet"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="4dp"
            android:text="Take a picture or follow friends to see posts in your feed"
            android:textAlignment="center"
            android:textColor="@color/system_gray"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Title Bar with blur effect -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp"
        app:liftOnScroll="false">

        <!-- Safe Area Padding -->
        <View
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="@drawable/toolbar_blur_background" />

        <!-- Title Bar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/toolbar_blur_background"
            android:elevation="0dp"
            app:layout_scrollFlags="noScroll">

            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Capture"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:fontFamily="sans-serif-medium" />
        </androidx.appcompat.widget.Toolbar>

        <!-- Divider -->
        <View
            android:id="@+id/toolbar_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Test Controls for Debug Purposes -->
    <LinearLayout
        android:id="@+id/test_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center"
        android:layout_gravity="bottom"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>